<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background"
    tools:context=".ui.main.view.contact_us.ContactUs">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/toolbar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">


            <com.skydoves.elasticviews.ElasticImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@drawable/back_arrow"
                android:background="@drawable/back_button_bg"
                android:padding="6dp"
                app:imageView_scale="0.7"
                app:imageView_duration="150"
                android:id="@+id/back"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/back"
                app:layout_constraintBottom_toBottomOf="@id/back"
                android:text="Contact Us"
                android:textSize="18sp"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/white"
                android:id="@+id/title"/>


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:scrollbars="none"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="160dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/contact_icon"/>


            <TextView
                android:id="@+id/tv_service"
                style="@style/semiBoldText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="Get help 24/7 from Splitur Service Team."
                android:textSize="24dp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/contact_icon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />


            <TextView
                android:id="@+id/tv_support"
                style="@style/normalText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:layout_marginBottom="80dp"
                android:text="Our crew of superheroes are standing by for service &amp; support!"
                app:layout_constraintTop_toBottomOf="@id/tv_service"
                app:layout_constraintStart_toStartOf="@id/tv_service" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/faq_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_support"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/rect_with_yellow_stroke"
                android:padding="10dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:src="@drawable/faq_icon"
                    android:padding="10dp"
                    android:layout_marginStart="10dp"
                    android:id="@+id/faq_icon"/>

                <TextView
                    android:id="@+id/tv_faq"
                    style="@style/headingText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:text="FAQ"
                    android:textSize="24sp"
                    app:layout_constraintStart_toEndOf="@+id/faq_icon"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="@id/tv_faq"
                    app:layout_constraintTop_toBottomOf="@id/tv_faq"
                    android:layout_marginEnd="5dp"
                    android:layout_marginTop="-8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:textColor="@color/yellow"
                    android:text="Get answers for Frequently asked Questions"
                    style="@style/normalText"
                    android:id="@+id/tv_faq_detail"/>



            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/chat_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/faq_layout"
                android:layout_marginTop="15dp"
                android:background="@drawable/plan_bg_blue_stroke"
                android:padding="10dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:src="@drawable/chat_icon"
                    android:padding="10dp"
                    android:layout_marginStart="10dp"
                    android:id="@+id/chat_icon"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toEndOf="@id/chat_icon"
                    app:layout_constraintTop_toTopOf="parent"
                    android:text="Chat"
                    style="@style/headingText"
                    android:textSize="24sp"
                    android:layout_marginStart="20dp"
                    android:id="@+id/tv_chat"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="@id/tv_chat"
                    app:layout_constraintTop_toBottomOf="@id/tv_chat"
                    android:layout_marginEnd="5dp"
                    android:layout_marginTop="-8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:textColor="@color/blue"
                    android:text="Get Issues resolved directly by our Crew"
                    style="@style/normalText"
                    android:id="@+id/tv_chat_detail"/>



            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>