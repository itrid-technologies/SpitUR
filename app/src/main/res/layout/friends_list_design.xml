<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/rect_bg"
    android:backgroundTint="@color/profile_bg"
    android:padding="10dp"
    android:layout_margin="3dp"
    android:layout_height="wrap_content">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/friend_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/user"
        app:civ_border_width="2dp"
        android:layout_marginStart="10dp"
        app:civ_circle_background_color="@color/icons_bg"
        app:civ_border_color="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/friend_image"
        app:layout_constraintTop_toTopOf="@id/friend_image"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        style="@style/semiBoldText"
        android:text="Rajesh kumar"
        android:id="@+id/friend_name"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/friend_name"
        app:layout_constraintTop_toBottomOf="@id/friend_name"
        style="@style/normalText"
        android:text="kumar2022"
        android:id="@+id/friend_id"/>

</androidx.constraintlayout.widget.ConstraintLayout>