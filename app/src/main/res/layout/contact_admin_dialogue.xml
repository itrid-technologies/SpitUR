<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:background="@android:color/transparent"
    android:orientation="vertical">




    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/otp_dialogue"
        android:layout_width="280dp"
        android:paddingTop="10dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingBottom="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/white_stroke"
        android:layout_gravity="center_horizontal"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/tv_sorry"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="We are Sorry!!"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_sorry_message"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/terms_bg"
            android:fontFamily="@font/inter_medium"
            android:gravity="start|center"
            android:padding="10dp"
            android:paddingStart="14dp"
            android:paddingTop="8dp"
            android:paddingEnd="8dp"
            android:paddingBottom="@dimen/_5sdp"
            android:text="This rarely happens , We have Sent a Urgent notification to the admin if you dont hear back in 24 hrs. You can contact us on the 24/7 Live chat support. We will Issue a Refund. You can also contact the admin by clicking the buttton below"
            android:textColor="@color/white"
            android:alpha="0.7"
            android:textSize="10sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_sorry" />

        <Button
            android:id="@+id/btn_contact_admin"
            style="@style/buttonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_round_bg"
            android:paddingTop="5dp"
            android:fontFamily="@font/inter_medium"
            android:paddingBottom="5dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="Contact Admin"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_sorry_message"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />



    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
