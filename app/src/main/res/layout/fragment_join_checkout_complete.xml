<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background"
    tools:context=".ui.main.view.join_checkout_complete.JoinCheckoutComplete">

    <include
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:id="@+id/toolbar"
        layout="@layout/toolbar_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:scrollbars="none"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@id/credential_layout"
                android:text="Group Credentials"
                style="@style/semiBoldText"
                android:textSize="20sp"
                android:layout_marginBottom="10dp"
                android:id="@+id/group_credentials"/>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/credential_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/btn_home"
                android:padding="20dp"
                android:layout_marginBottom="20dp"
                android:backgroundTint="@color/light_blue"
                android:background="@drawable/rect_bg">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:drawableStart="@drawable/ic_user"
                    android:background="@color/transparent"
                    android:drawablePadding="15dp"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    android:hint="Email"
                    android:textColorHint="@color/hint_color"
                    android:id="@+id/ed_username"/>

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/ed_username"
                    app:layout_constraintBottom_toBottomOf="@id/ed_username"
                    android:src="@drawable/copy_link"
                    android:id="@+id/copy_email"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/ed_username"
                    android:layout_marginTop="10dp"
                    android:background="@color/hint_color"
                    android:alpha="0.35"
                    android:id="@+id/view"
                    />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/view"
                    android:drawableStart="@drawable/ic_password"
                    android:background="@color/transparent"
                    android:layout_marginTop="10dp"
                    android:drawablePadding="15dp"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    android:hint="Password"
                    android:textColorHint="@color/hint_color"
                    android:id="@+id/ed_password"/>

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/ed_password"
                    app:layout_constraintBottom_toBottomOf="@id/ed_password"
                    android:src="@drawable/copy_link"
                    android:id="@+id/copy_pass"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/ed_password"
                    android:layout_marginTop="10dp"
                    android:background="@color/hint_color"
                    android:alpha="0.35"
                    android:id="@+id/view1"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/view1"
                    android:drawableStart="@drawable/ic_password"
                    android:background="@color/transparent"
                    android:layout_marginTop="10dp"
                    android:drawablePadding="15dp"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="15sp"
                    android:text="Request Otp"
                    android:textColor="@color/hint_color"
                    android:textColorHint="@color/hint_color"
                    android:id="@+id/tv_request"/>

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tv_request"
                    app:layout_constraintBottom_toBottomOf="@id/tv_request"
                    android:background="@drawable/send_icon"
                    android:id="@+id/send"/>


            </androidx.constraintlayout.widget.ConstraintLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/credential_layout"
                app:layout_constraintEnd_toEndOf="@id/credential_layout"
                app:layout_constraintTop_toBottomOf="@id/credential_layout"
                style="@style/normalText"
                android:visibility="gone"
                android:textColor="@color/error"
                android:padding="3dp"
                android:id="@+id/errorMessage"/>


            <Button
                android:id="@+id/btn_home"
                style="@style/buttonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_round_bg"
                android:fontFamily="@font/poppins_semibold"
                app:layout_constraintBottom_toBottomOf="parent"
                android:paddingStart="80dp"
                android:paddingTop="5dp"
                android:paddingEnd="80dp"
                android:paddingBottom="5dp"
                android:text="Home"
                android:textSize="14dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="385dp" />




        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>