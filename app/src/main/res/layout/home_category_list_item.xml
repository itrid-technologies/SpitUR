<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="4dp"
    >

    <ImageView
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:src="@drawable/song_icon"
        android:padding="10dp"
        android:background="@drawable/rect_back_with_grey_stroke"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/catImage"/>

    <TextView
        android:id="@+id/catName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/catImage"
        app:layout_constraintTop_toBottomOf="@id/catImage"
        android:text="Movies"
        android:textSize="10sp"
        android:padding="5dp"
        app:layout_constraintEnd_toEndOf="@id/catImage"
        android:textColor="@color/white"
        android:fontFamily="@font/poppin_regular"/>


</androidx.constraintlayout.widget.ConstraintLayout>