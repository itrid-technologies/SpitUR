<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    android:padding="15dp"
    android:background="@drawable/rect_back_with_grey_stroke"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/search_icons"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:src="@drawable/player_icon"
        app:civ_border_width="2dp"
        android:layout_marginStart="10dp"
        app:civ_circle_background_color="@color/icons_bg"
        app:civ_border_color="@color/icons_bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/search_icons"
        app:layout_constraintTop_toTopOf="parent"
        android:text="-"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/poppins_medium"
        android:id="@+id/group_title"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/group_title"
        app:layout_constraintTop_toBottomOf="@id/group_title"
        android:text="-"
        android:textColor="@color/green"
        android:textSize="12sp"
        android:fontFamily="@font/poppins_medium"
        android:id="@+id/space"
        />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="@id/join"
        app:layout_constraintBottom_toBottomOf="@id/join"
        app:layout_constraintEnd_toStartOf="@id/join"
        android:layout_marginEnd="6dp"
        android:src="@drawable/otp_approve"
        android:id="@+id/otp_request_status"
        android:visibility="gone"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="Open"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:fontFamily="@font/poppins_medium"
        android:textAllCaps="false"
        android:background="@drawable/rect_blue_bg"
        android:padding="10dp"
        android:id="@+id/join"/>



</androidx.constraintlayout.widget.ConstraintLayout>