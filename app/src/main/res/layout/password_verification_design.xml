<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingEnd="@dimen/_6sdp"
    android:id="@+id/layout"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_user"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@color/images_placeholder"
        app:civ_border_color="@color/yellow"
        app:civ_border_width="2dp"
        app:civ_circle_background_color="#94F0F0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_user_status"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/round_back"
        android:backgroundTint="@color/yellow"
        android:gravity="center"
        android:padding="4dp"
        app:layout_constraintBottom_toBottomOf="@id/iv_user"
        app:layout_constraintEnd_toEndOf="@id/iv_user" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/iv_user"
        app:layout_constraintEnd_toEndOf="@id/iv_user"
        app:layout_constraintTop_toBottomOf="@id/iv_user_status"
        android:text="-"
        android:textSize="15dp"
        android:textColor="@color/white"
        android:fontFamily="@font/poppins_bold"
        android:layout_marginTop="6dp"
        android:id="@+id/status"/>


</androidx.constraintlayout.widget.ConstraintLayout>