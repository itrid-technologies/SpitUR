<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape android:shape="rectangle" >
            <gradient
                android:angle="180"
                android:endColor="#E42A6C"
                android:gradientRadius="@dimen/_360sdp"
                android:startColor="#C393FF"
                android:type="sweep" />


            <corners
                android:radius="16dp"/>
        </shape>
    </item>
    <item
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp">
        <shape android:shape="rectangle" >

            <solid android:color="#181A20" />
            <corners
                android:radius="16dp"/>
        </shape>
    </item>

</layer-list>