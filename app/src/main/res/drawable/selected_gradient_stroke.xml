<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape android:shape="rectangle" >
            <gradient
                android:angle="360"
                android:centerColor="#E42A6C"
                android:endColor="#E42A6C"
                android:gradientRadius="360"
                android:startColor="#C393FF"
                android:type="sweep" />

            <stroke
                android:width="2dp"
                android:color="#E42C6F" />
            <corners
                android:radius="20dp"/>
        </shape>
    </item>
    <item
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp">
        <shape android:shape="rectangle" >

            <solid android:color="@color/background" />
            <corners
                android:radius="20dp"/>
        </shape>
    </item>

</layer-list>